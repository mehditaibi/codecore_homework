
<div class="container-fluid p-3">
    <div class="row">
<% @posts.each do |post| %>
        <div class="container col-sm-12 col-md-6 col-lg-4 p-3">
            <div class="border rounded p-3">
                <h5 class="text-primary text-truncate"><%=link_to post.title, "/posts/#{post.id}" %></h5>
                <p class="text-truncate"><%= post.body%></p>
            </div>
        </div>
<% end %>
    </div>
</div>
